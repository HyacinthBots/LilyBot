root = true

[*]
charset = utf-8
end_of_line = lf
tab_width = 4
max_line_length = 120
insert_final_newline = true

[*.gradle.kts]
indent_style = tab

[*.kt]
indent_style = tab
ij_kotlin_name_count_to_use_star_import = 99999
ij_kotlin_name_count_to_use_star_import_for_members = 99999

[*.properties]
indent_style = space
indent_size = 2

[*.toml]
indent_style = tab

[.editorconfig]
indent_style = tab
indent_size = 4

[*.sh]
indent_style = tab
indent_size = 4
